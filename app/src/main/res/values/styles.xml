<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorPrimaryDark</item>
<!--        <item name="android:textColor">@color/colorGlowing</item>-->
    </style>

    <style name="PrimaryTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="LightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <style name="FABTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:backgroundTint">@color/colorVeryDark</item>
    </style>

    <style name="LightButtonTheme" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:colorPrimary">@color/colorPrimaryLight</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:layout_marginVertical">24dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">center|center_vertical</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:padding">4dp</item>
        <item name="android:textStyle">bold</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="buttonStyle">@style/LightButtonTheme</item>
        <item name="android:buttonStyle">@style/LightTheme</item>
    </style>
</resources>
